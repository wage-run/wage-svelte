{
	"name": "@wage/svelte",
	"version": "0.1.0",
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/wage-run/wage-svelte",
	"repository": {
		"type": "git",
		"url": "https://github.com/wage-run/wage-svelte.git"
	},
	"scripts": {
		"cp:wasm": "cp node_modules/@wage/wshttp/wshttp.wasm static/wshttp.wasm",
		"predev": "npm run cp:wasm",
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./dist/sw.js": {
			"types": "./dist/sw.d.ts",
			"svelte": "./dist/sw.js"
		}
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"svelte": "^3.54.0",
		"@sveltejs/kit": "^1.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.0",
		"@types/golang-wasm-exec": "^1.15.0",
		"@types/serviceworker": "^0.0.62",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"publint": "^0.1.9",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@wage/wshttp": "^0.0.1"
	}
}
